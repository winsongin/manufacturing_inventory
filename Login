import tkinter as tk

#Login Screen 

def login():
  log = "Logged in!"
  print(log)

#Window Creation
win = tk.Tk()
frmHome = tk.Frame(win)
frmHome.pack()

#Label object Creation
lUsername = tk.Label(win, text = 'Username')

lPassword = tk.Label(win, text = 'Password')

#Variables to Store Data

user = tk.StringVar()

passwd = tk.StringVar()

#Entry object

eUsername = tk.Entry(win, textvariable = user)

ePassword = tk.Entry(win, textvariable = passwd, show ='*')

#Button

bLogin = tk.Button(win, text = 'Login', command = login)

#placing in GUI

lUsername.pack(side= tk.TOP, anchor = 'w', expand = 'true')

eUsername.pack(side= tk.TOP, anchor = 'center', expand = 'true', fill = 'x')

lPassword.pack(side= tk.TOP, anchor = 'w', expand = 'true')

ePassword.pack(side= tk.TOP, anchor = 'center', expand = 'true', fill = 'x')

bLogin.pack(side = tk.BOTTOM, anchor = 'center', expand = 'true')


win.mainloop()
